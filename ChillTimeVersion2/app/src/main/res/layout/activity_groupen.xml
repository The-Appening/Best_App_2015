<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nl.mad_world.chilltime.Groupen"
    android:background="#ffb3ff9b">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Groepen"
        android:id="@+id/button5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="Groep"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacten"
        android:id="@+id/button6"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button5"
        android:onClick="Contact"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instellingen"
        android:id="@+id/button7"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button6" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/button5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aanmaken"
        android:id="@+id/button8"
        android:layout_below="@+id/button5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button7" />
</RelativeLayout>
