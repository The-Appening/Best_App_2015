<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nl.mad_world.chilltime.addContact"
    android:background="#ff92fcff">

    <TextView android:text="Vul een naam in om de naam op te zoeken" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/explainAddCon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zoek"
        android:id="@+id/SearchContact"
        android:layout_below="@+id/ContactName"
        android:layout_centerHorizontal="true"
        android:onClick="SearchContact"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Contact"
        android:ems="10"
        android:id="@+id/ContactName"
        android:layout_below="@+id/explainAddCon"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddContactList"
        android:layout_below="@+id/SearchContact"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
